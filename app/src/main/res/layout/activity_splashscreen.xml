<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Splashscreen" android:foreground="#007FFFD4" android:background="#673AB7">
    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/appimage"
               android:src="@mipmap/ic_launcher_round"
               android:scaleType="center"
    />
    <TextView
            android:text="@string/app_name"
            android:layout_width="303dp"
            android:layout_height="161dp" android:id="@+id/textView"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/appimage"
            app:layout_constraintVertical_bias="0.701"/>
</android.support.constraint.ConstraintLayout>